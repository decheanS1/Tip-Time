<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SecondActivity">

<EditText
    android:id="@+id/editValue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:ems="10"
    android:text="Enter value"
    android:inputType="numberDecimal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="68dp"
    android:layout_marginEnd="24dp"
    android:text="TextView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/convertBtn" />

<RadioGroup
    android:id="@+id/radioGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editValue">

    <RadioButton
        android:id="@+id/mili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Millilitres to Ounces" />

    <RadioButton
        android:id="@+id/ounce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FluidOunces to Millilitres" />

    <RadioButton
        android:id="@+id/grams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grams to cups" />

    <RadioButton
        android:id="@+id/cups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cups to Grams" />
</RadioGroup>

<Button
    android:id="@+id/convertBtn"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="36dp"
    android:layout_marginEnd="24dp"
    android:text="Convert"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>
